
#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	cout << "Продолжение программы “Геометрические фигуры”" << endl;
	cout << "выберите фигуру: " << endl;
	cout << "1- линия 2- квадрат" << endl;
	int m;
	cin >> m;
	if (m == 1) {
		cout << "введите текстуру" << endl;
		int tex;
		cin >> tex;
		cout << "введите размер " << endl;
		int g;
		cin >> g;
		while (g >= 0) {
			cout << tex << " ";
			g--;
		}
	}
	if (m == 2) {
		cout << "1полый или 2заполненный" << endl;
	}
	int y; cin >> y; 
	if (y == 1) {
		cout << "введите текстуру" << endl;
		int tex;
		cin >> tex;
		cout << "введите размер " << endl;
		int size;
		cin >> size;
		for (int i = 0; i < size; i++) {
			for (int j = 0; j < size; j++) {
				if (i == 0 || i == size - 1 || j == 0 || j == size - 1) {
					cout << tex << " ";
				}
				else {
					cout << "  ";
				}
			}
			cout << endl;
		}
	}
		if (y == 2) {

			int size;

			cout << "введите текстуру" << endl;
			int tex;
			cin >> tex;
			cout << "задайте размер: ";
			cin >> size;

			int b;

			for (int i = 0; i < size; i++) {
				for (int j = 0; j < size; j++) {
					cout << tex << " ";
				}
				cout << endl;
			}
		}
}
